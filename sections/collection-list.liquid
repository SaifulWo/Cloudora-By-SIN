<div class="w-11/12 mx-auto">

  <div class="flex gap-4 pt-16">
    {% assign collection_title = "Blankets, Mattress Accessories, Pillows" | split: "," %}
    {% for collection in section.settings.collection_list %}

      <a href="{{ collection.url }}">
        <div>
          <div class="pb-2 collection-image">{{ collection.featured_image | image_url: width: 400 | image_tag }}</div>
          <div class="flex justify-between">
            <strong>{{ collection.title }}</strong>
            <span class="text-gray-400">
              <i class="fa-solid fa-arrow-right"></i>
            </span>
          </div>
        </div>
      </a>

    {% else %}

      {% for item in (1..3) %}
        <div>
          <div class="pb-2 collection-image">{{ "collection-apparel-" | append: forloop.index | placeholder_svg_tag }}</div>
          <div class="flex justify-between">
            <strong>{{ collection_title[forloop.index0] }}</strong>
            <span class="text-gray-400">
              <i class="fa-solid fa-arrow-right"></i>
            </span>
          </div>
        </div>
      {% endfor %}

    {% endfor %}
  </div>

</div>

{% schema %}
  {
    "name": "Collection List",
    "settings": [
      {
        "type": "collection_list",
        "id": "collection_list",
        "label": "Collections",
        "limit": 6
      }
    ],
    "presets": [
      {
        "name": "Collection List"
      }
    ]
  }
{% endschema %}